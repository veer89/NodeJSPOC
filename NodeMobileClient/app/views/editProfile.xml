<Alloy>
	<View id="wrapper">
		<Require id="navBar" src="navBar" backBtn="true" title="Edit Profile"/>
		<View id="topSection">
			<View id="leftSection" >
				<ImageView id="profilePic" />
			</View>
			<View id="rightSection" >
				<TextField class="rightItem" id="name" top="5" />
				<TextField class="rightItem" id="designation" top="5" />
				<TextField class="rightItem" id="emailId" top="5" />
				<TextField class="rightItem" id="phoneNumber" top="5" />
			</View>
		</View>
		<View class="separator" left="0" right="0"/>
		<ScrollView id="bottomSection">
			<Label text="Permanent Address" class="leftItem" textAlign="center" width="90%"/>
			<View class="subRow">
				<Label class="leftItem header" text="House Number:"/>
				<TextField class="rightItem" id="house_number1"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="Street:"/>
				<TextField class="rightItem" id="street1"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="City:"/>
				<TextField class="rightItem" id="city1"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="State:"/>
				<TextField class="rightItem" id="state1"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="Country:"/>
				<TextField class="rightItem" id="country1"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="PIN Code:"/>
				<TextField class="rightItem" id="pin1"/>
			</View>
			<View class="subRow">
				<Button class="updateBtn" id="btnAddress1" onClick="updatePermanentAddress"/>
			</View>
			<View class="separator"/>
			
			<Label text="Temporary Address" class="leftItem" textAlign="center" width="90%"/>
			<View class="subRow">
				<Label class="leftItem header" text="House Number:"/>
				<TextField class="rightItem" id="house_number2"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="Street:"/>
				<TextField class="rightItem" id="street2"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="City:"/>
				<TextField class="rightItem" id="city2"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="State:"/>
				<TextField class="rightItem" id="state2"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="Country:"/>
				<TextField class="rightItem" id="country2"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="PIN Code:"/>
				<TextField class="rightItem" id="pin2"/>
			</View>
			<View class="subRow">
				<Button class="updateBtn" id="btnAddress2" onClick="updateTemporaryAddress"/>
			</View>
			<View class="separator"/>
			
			<Label text="Social Links" class="leftItem" textAlign="center" width="90%"/>
			<View class="subRow">
				<Label class="leftItem header" text="Twitter:"/>
				<TextField class="rightItem" id="twitter"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="Facebook:"/>
				<TextField class="rightItem" id="facebook"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="LinkedIn:"/>
				<TextField class="rightItem" id="linkedIn"/>
			</View>
			<View class="subRow">
				<Button class="updateBtn" id="btnSocial" onClick="updateSocialLinks" />
			</View>
			<View class="separator"/>
			
			<Label text="Project" class="leftItem" textAlign="center" width="90%"/>
			<View class="subRow">
				<Label class="leftItem header" text="Project Name:"/>
				<TextField class="rightItem" id="projectName"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="Project Location:"/>
				<TextField class="rightItem" id="projectLocation"/>
			</View>
			<View class="subRow">
				<Label class="leftItem header" text="Project Duration:"/>
				<TextField class="rightItem" id="projectDuration"/>
			</View>
			<View class="subRow">
				<Button class="updateBtn" id="btnProject" onClick="updateProjects" />
			</View>
		</ScrollView>
		<View id="bottom" height="10"/>
	</View>
</Alloy>