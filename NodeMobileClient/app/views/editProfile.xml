<Alloy>
	<View id="wrapper">
		<Require id="navBar" src="navBar" backBtn="true" title="Edit Profile"/>
		<View id="topSection">
			<View id="leftSection" >
				<ImageView id="profilePic" />
			</View>
			<View id="rightSection" >
				<TextField id="name" class="rightItem" value="Test" top="30" />
				<TextField id="designation" class="rightItem" value="Test Engineer" top="10"/>
			</View>			
		</View>
		<View class="separator" left="0" right="0"/>
		<ScrollView id="bottomSection">
			<View class="subRow">
				<Label id="empIdTitle" class="leftItem" text="Employee Id:"/>
				<TextField id="empId" class="rightItem" value="134"/>
			</View>		
			<View class="subRow">
				<Label id="emailIdTitle" class="leftItem" text="Email Id:"/>
				<TextField id="emailId" class="rightItem" value="test@gmail.com"/>
			</View>	
			<View class="subRow">
				<Label id="phoneNumberTitle" class="leftItem" text="Phone Number:"/>
				<TextField id="phoneNumber" class="rightItem" value="1133334"/>
			</View>	
			<View class="subRow">
				<Label id="addressTitle" class="leftItem" text="Address:"/>
				<TextArea id="address" class="rightItem" height="60" value="Park Venue: 1, Noida"/>
			</View>				
		</ScrollView>
	</View>
</Alloy>