<Alloy>
	<View id="acsloginMain">
		<View id="loginContainer">
			<View id="titleContainer">
				<ImageView id="header"/>
				<View id="divider"/>
				<Label class="acsloginMsg" id="msgLbl"/>
			</View>
			<View id="bodyContainer">
				<View id="acsLogin">
					<TextField class="acsLoginTxt" id="usernameTxt" />
					<TextField class="acsLoginTxt" id="passwordTxt"/>
					<View class="controlContainer">
						<Button id="helpImg" />
						<Label class="acsloginLbl" id="forgotPwdLbl" class="acsloginLbl" onClick="forgotPwd">Forgot Password</Label>
						<View class="acsLoginBtn" id="loginBtn" onClick="loginClick">
							<Label id="loginLbl">Login</Label>
						</View>		
					</View>
				</View>
			</View>
		</View>
	</View>
</Alloy> 